<h1>Listing Tags</h1>

<%= render :partial => 'tags/select_tag', :locals => { :exact => true, :act => :open_tag }%>

<table>
	<thead>
		<tr>
			<th>Tag</th>
			<th>Main Entry</th>
			<th></th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		<% for tag in @tags %>
			<tr>
			  <td><%- if tag.effective -%><span style='color: gray;'><%- end -%><%= tag.literal_qualified_name %><%- if tag.effective -%></span><%- end -%></td>
			  <td><%= show_link(tag.effective_root) %></td>
			  <td><%= link_to 'Edit', tag %></td>
			  <td><%= link_to 'Destroy', tag, :confirm => 'Are you sure?', :method => :delete %></td>
  			</tr>
		<% end %>
	</tbody>
</table>

