<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01//EN" "http://www.w3.org/TR/html4/strict.dtd">
<html>
<head>
<title>Data Commons Project: <%= controller.action_name %></title>
<meta http-equiv="content-type" content="text/html;charset=utf-8" />
  <%= stylesheet_link_tag 'scaffold' %>
</head>
<body>

<!-- begin wrapper div -->
<div id="bigwrapper">

<!-- begin pagewidth div -->
<div id="pagewidth">

<!-- begin header div -->
<div id="header"><a href="/"><img src="/images/Data-Commons-Logo.gif" alt="Data Commons Project" width="700" height="110" border="0" id="logo"></a>
<%- if current_user -%>
<div id="userstatus">Logged in as: <%= current_user.login %> (<%= link_to 'Logout', :controller => 'users', :action => 'logout' %>)</div>
<%- else -%>
<div id="userstatus"><%= link_to 'Login', :controller => 'users', :action => 'login' %></div>
<% end %>
</div>
<!-- end header div -->
<!-- begin maincol div -->
<div id="maincol">
<h1>Data Commons Project</h1>

<p style="color: green"><%= flash[:notice] %></p>

<%= @content_for_layout %>
</div>
<!-- end maincol div -->
<!-- begin footer div -->
<div id="footer">
<p>
Website by <a href="http://www.brattcollective.com" title="View the website of the Brattleboro Tech Collective">Brattleboro Tech Collective</a> &bull; Web Hosting provided by <a href="http://www.gaiahost.coop" target="_blank" title="View the website of GAIA Host Collective">GAIA Host Collective</a>
</p>
</div>
<!-- end footer div -->
</div>
<!-- end pagewidth div -->
</div>
<!-- end wrapper div -->
</body>
</html>
