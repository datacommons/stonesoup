<% if @entries %>
 <% if @entries.blank? %>
  <p>No results were found for this search.</p>
  <p><%= link_to 'Would you like to add a new organization?', :controller => 'organizations', :action => 'new' %></p>
 <% else %>
 <h2>Search Results</h2>
  <div class="listing_info"><%= page_entries_info @entries %></div>
  <%= will_paginate @entries %>
  <% for entry in @entries %>
   <% if entry.accessible? current_user %>
    <div class='listing'>
    <%= show_link entry %><br >
    <% if entry.respond_to? "primary_location" and !entry.primary_location.nil? %>
     	<% loc = entry.primary_location %>
		<%= render :partial => 'locations/display_primary', :locals => {:location => loc} %>
    <% else %>
     <%= OrganizationsPerson.find_all_by_person_id(entry.id).collect{|op| [op.organization.name]}.join(", ") %>
    <% end %>
    </div>
   <% else %>
    <div class="listing private">
    Result withheld.<br />
    <% if entry.access_rule.access_type == 'PRIVATE' %>
    Only editors may view this.
    <% end %>
    <% if entry.access_rule.access_type == 'LOGGEDIN' %>
    Visible only when logged in.
    <% end %>
    </div>
   <% end %>
  <% end %>
  <div class='clearboth'></div>
  <%= will_paginate @entries %>
 <h2>View Options</h2>
   <ul>  
    <li>View results on a <%= link_to 'map', params.merge(:action => 'map') %></li>
    <li>Download as <%= link_to 'CSV', params.merge(:format => 'csv') %> (suitable for spreadsheet programs)</li>
    <li>Download as <%= link_to 'XML', params.merge(:format => 'xml') %></li>
    <li>Download as <%= link_to 'PDF', params.merge(:format => 'pdf') %></li>
   </ul>
 <% end %>
<% else %>
	<h2>Latest Changes</h2>
	<% for entry in @latest_changes %>
	  <p><%= link_to show_link entry %>
	  <% if entry.updated_at %>
	    updated <%= time_ago_in_words entry.updated_at %> ago
	  <% end %>
	  </p>
	<% end %>
<% end %>